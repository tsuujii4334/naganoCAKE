<div class ="contaier px-5">
  <div class="row">
    <div class="col-7">
      <h2>注文情報確認</h2>
      <table>
        <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= order.item.name %></td>
                <td><%= order.item.with_tax_price %></td>
                <td><%= order.amount %></td>
                <td><%= order.subtotal %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-5">
      <table>
        <thead>
          <th>送料</th>
          <th>商品合計</th>
          <th>請求金額</th>
        </thead>
        <tbody>
          <th><%= @postage %></th>
          <th><% @total +=  @total + order.subtotal %></th>
          <th><% @total + @postage %></th>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div>
        <span>支払い方法</span>
        <span>
          <%= f.label :payment_method %>
        </span>
      </div>
      <div>
        <span>お届け先</span>
        <span>
          <%= f.label :address %>
        </span>
      </div>
        <%= link_to "注文を確定する", orders_completion_path,:class => "btn btn-success ms-3" %>
    </div>
  </div>
</div>