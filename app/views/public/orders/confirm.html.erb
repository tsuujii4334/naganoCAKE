<div class ="contaier px-5">
  <div class="row">
    <div class="col-7">
      <h2>注文情報確認</h2>
      <table>
        <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.price %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.item.price*cart_item.amount %></td>
            </tr>
             <% @total +=  @total + cart_item.item.price*cart_item.amount %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-5">
      <table>
        <thead>
          <th>送料</th>
          <th>商品合計</th>
          <th>請求金額</th>
        </thead>
        <tbody>
          <th><%= @postage %></th>
          <th><%= @total %></th>
          <th><%= @total + @postage %></th>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div>
        <span>支払い方法</span>
        <span>
          <%= @order.payment_method_i18n %>
        </span>
      </div>
      <div>
        <span>お届け先</span>
        <span>
          <%= @order.address %>
        </span>
      </div>
        <%= link_to "注文を確定する", orders_completion_path,:class => "btn btn-success ms-3" %>
        <!--hidden_fieldを使ってorderテーブルにセーブする-->
        <%= form_with model: @order , url:  orders_create_path, method: :post do |f| %>
          <%= f.hidden_field :postal_code, :value => @order.customer.postal_code %><!--hidden_fieldの書き方を質問する-->
          <%= f.hidden_field :total_amount, :value => @total + @postage %>
          <%= f.hidden_field :postage, :value => @postage %>
          <%= f.hidden_field :address, :value => @order.customer.address %>
          <%= f.hidden_field :addressee, :value => @order.customer.full_name %>
        <% end %>
    </div>
  </div>
</div>