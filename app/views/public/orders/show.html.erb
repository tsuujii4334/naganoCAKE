<div class ="contaier px-5">
  <div class="row">
    <h2>注文履歴詳細</h2>
    <div class="col-7">
      <p>注文情報</p><!--テーブルを盾に並べる-->
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.updated_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <p>請求情報</p>
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_amount - @postage %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <p>注文内容</p>
      <table>
        <tr>
          <th>商品</th>
          <td><%=  %></td><!--商品名の買い方を質問する-->
        </tr>
        <tr>
          <th>単価（税込）</th>
          <td><%= @order_details.unit_price %></td>
        </tr>
        <tr>
          <th>個数</th>
          <td><%= @order_details.quantity %></td>
        </tr>
        <tr>
          <th>小計</th>
          <td><%= @order_details.unit_price * @order_details.quantity %></td>
        </tr>
      </table>
    </div>
  </div>
</div>