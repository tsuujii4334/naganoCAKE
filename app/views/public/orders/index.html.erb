<div class ="contaier px-5">
  <div class="row">
    <div class="col-7">
      <h2>注文履歴一覧</h2>
      <table border="2">
        <thead>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
                <td>
                  <div>
                    〒<%= order.postal_code %>
                  </div>
                  <div>
                    <%= order.address %>
                  </div>
                  <div>
                    <%= order.addressee %>
                  </div>
                </td>
                <td>
                   <% order.order_details.each do |order_detail| %>
                   <div>
                     <%= order_detail.item.name %>
                    </div>
                   <% end %>
                </td>
                <td><%= order.total_amount %>円</td>
                <td>
                  <%= link_to "表示する", show_order_path(order.id), :class => "btn btn-primary ms-3" %>
                </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>