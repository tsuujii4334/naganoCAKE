<div class ="container px-4">
  <div class="row">
    <div class="col">
     <span>商品一覧</span><span>(全<%= @itemcount%>件)</span><!--アイテムすべてをカウントする方法を質問する。-->
    </div> 
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3">
        <%= link_to show_items_path(item.id) do %>
          <div><%= image_tag item.get_image(100,100) %></div>
          <div><%= item.name %></div>
        <% end %>
        <div>￥<%= item.with_tax_price %></div>
    </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>