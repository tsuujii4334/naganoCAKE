<!--itemshowの記述-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
  <%= image_tag @item.get_image(100,100) %>
       <h2><%= @item.name %></h2>
           <%= @item.introduction %>
           <%= @item.price %>
           <%= form_with model: @item , url: public_update_cart_item_path(@cart_item.id) , method: :patch do |f| %><!--pathの指定が-->
             <%= f.hidden_field :item_id, :value => @item.id %>
             <%= f.select :amount, *[1..10] %>
             <%= f.submit 'カートに入れる', class:"btn btn-success" %>
           <% end %>
    </div>
  </div>
</div>