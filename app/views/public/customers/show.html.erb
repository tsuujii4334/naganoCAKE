<div class="contaier">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <!--customerindexの記述-->
    <h3>マイページ</h3>
    <h2>登録情報</h2>
    <%= link_to public_customers_edit_path(@customer.id),class:"btn btn-block btn-outline-secondary" do %>
     <p>編集する</p>
    <% end %>
      <table class="table table-hover table-inverse">
       <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <th>
            氏名
          </th>
          <td>
            <%= customer.last_name %> <%= customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>
            <td>
              カナ
            </td>
            <td>
              <%= customer.last_name_kana %> <%= customer.first_name_kana %>
            </td>
          </th>
        </tr>
        <tr>
          <th>
            <td>
              郵便番号
            </td>
            <td>
              <%= customer.postal_code %>
            </td>
          </th>
        </tr>
        <tr>
          <th>
            <td>
              住所
            </td>
            <td>
              <%= customer.address %>
            </td>
          </th>
        </tr>
        <tr>
          <th>
            <td>
              電話番号
            </td>
            <td>
              <%= customer.telephone_number %>
            </td>
          </th>
        </tr>
        <tr>
          <th>
            <td>
              メールアドレス
            </td>
            <td>
              <%= customer.email %>
            </td>
          </th>
        </tr>
        <% end %>
        </tbody>
      </table>
     <%= link_to public_show_order_path(@order.id),class:"btn btn-block btn-outline-secondary" do %>
      <p>一覧を見る</p>
     <% end %>
    </div>
  </div>
</div>