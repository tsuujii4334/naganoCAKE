<!--customershowの記述-->
<div class="container px-5 py-5">
  <div class="row">
    <div class="col-md-8">
      <h3>
           <%= @customer.full_name %>さんの会員詳細
      </h3>
      <table>
        <tr>
          <th>
            会員ID
          </th>
          <td>
            <%= @customer.id %>
          </td>
        </tr>
        <tr>
          <th>
            氏名
          </th>
          <td>
            <%= @customer.last_name %> <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>
            フリガナ
          </th>
          <td>
            <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>
            郵便番号
          </th>
          <td>
            <%= @customer.postal_code %>
          </td>
        </tr>
        <tr>
          <th>
            住所
          </th>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <th>
            電話番号
          </th>
          <td>
            <%= @customer.telephone_number %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <td>
            <%= @customer.email %>
          </td>
        </tr>
        <tr>
          <th>
           会員ステータス
          </th>
          <td>
            <% if @customer.is_deleted == true %>
            <%= "有効" %>
            <% else %>
            <%= "無効" %>
            <% end %><!--会員ステータスを書く-->
          </td>
        </tr>
      </table>
        
        <%= link_to admin_edit_customer_path(@customer.id),class:"btn btn-success" do %>
          <p>編集する</p>
        <% end %>
        <%= link_to admin_path,class:"btn btn-primary" do %>
          <p>注文履歴一覧を見る</p>
        <% end %>
    </div>
  </div>
</div>