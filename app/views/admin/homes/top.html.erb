<div class="contaier">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <!--customerindexの記述-->
    <h2>注文履歴一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th colspan="3"></th>
          </tr>
       </thead>
       <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to admin_show_customer_path(customer.id) do %>
              <%= customer.full_name %>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
        </tr>
        <% end %>
        <%= paginate customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>