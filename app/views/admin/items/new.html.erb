<h3>商品新規登録</h3>

<%= form_with model: @items, url: admin_items_new_path do |f| %>
  <%= render "admin/shared/error_messages", resource: resource %>
  <div class="field">
      <%= f.label :商品画像 %>
      <%= f.text_field :image, accept:"image/*" %>
  </div>

  <div class="field">
      <%= f.label :商品名 %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
      <%= f.label :商品説明 %>
      <%= f.text_field :introducton, autofocus: true, autocomplete: "introducton" %>
  </div>
  
  <div class="field">
      <%= f.label :税抜価格 %>
      <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>