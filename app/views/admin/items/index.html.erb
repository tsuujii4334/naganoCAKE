<div class="contaier">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <!--itemindexの記述-->
    <h2>商品一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th colspan="3"></th>
          </tr>
       </thead>
       <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <%= image_tag book.user.get_profile_image(100,100) %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              Title：<%= book.title %>
            <% end %>
          </td>
          <td>
            Opinion：<%= book.body %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>